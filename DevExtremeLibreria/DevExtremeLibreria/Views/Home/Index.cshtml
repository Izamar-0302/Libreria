@{
    ViewData["Title"] = "Inicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron" style="
    background: linear-gradient(to bottom, rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('@Url.Content("~/Content/Imagen/fondolibro.jpg")');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    color: white;
    min-height: 400px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    text-shadow: 1px 1px 3px rgba(0,0,0,0.8);">
    <h1 class="display-4"><i class="fas fa-book-open"></i> Bienvenido a la Librería</h1>
    <p class="lead">Sistema de Gestión para Librerías</p>
    <hr class="my-4" style="background-color: white;">
</div>

<div class="row mt-4">
    <div class="col-md-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-book"></i> Catálogo de Libros</h5>
                <p class="card-text">Explora, edita y gestiona todos los libros disponibles</p>
                <a href="@Url.Action("Libro", "Home")" class="btn" style="background-color: #F9FEE0; border-color: #6B8E23; ">Acceder</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-user-edit"></i> Autores destacados</h5>
                <p class="card-text">Gestiona autores, biografías y sus obras más importantes</p>
                <a href="@Url.Action("Autor", "Home")" class="btn" style="background-color: #F9FEE0; border-color: #6B8E23; ">Acceder</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-building"></i> Editoriales</h5>
                <p class="card-text">Maneja las editoriales asociadas a tus libros.</p>
                <a href="@Url.Action("Editorial", "Home")" class="btn" style="background-color: #F9FEE0; border-color: #6B8E23; ">Acceder</a>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-user-tag"></i> Lectores</h5>
                <p class="card-text">Administra los lectores registrados en la librería.</p>
                <a href="@Url.Action("Lector", "Home")" class="btn" style="background-color: #F9FEE0; border-color: #6B8E23; ">Acceder</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-user-tie"></i> Empleados</h5>
                <p class="card-text">Gestión del personal de la librería.</p>
                <a href="@Url.Action("Empleado", "Home")" class="btn" style="background-color: #F9FEE0; border-color: #6B8E23; ">Acceder</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-truck"></i> Proveedores</h5>
                <p class="card-text">Controla los proveedores y los pedidos de libros.</p>
                <a href="@Url.Action("Proveeedor", "Home")" class="btn" style="background-color: #F9FEE0; border-color: #6B8E23; ">Acceder</a>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-cash-register me-2"></i> Ventas</h5>
                <p class="card-text">Gestiona las Ventas.</p>
                <a href="@Url.Action("Venta", "Home")" class="btn" style="background-color: #F9FEE0; border-color: #6B8E23;">Acceder</a>
            </div>
        </div>
    </div>
</div>
