@{
    ViewData["Title"] = "Metodopago";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Metodopago</h2>

@(Html.DevExtreme().DataGrid<DevExtremeLibreria.Models.MetodoPago>
    ()
    .DataSource(ds => ds.WebApi()
    .Controller("Metodopago")
    .LoadAction("Get")
    .InsertAction("Post")
    .UpdateAction("Put")
    .DeleteAction("Delete")
    .Key("MetodopagoId")
    )
    .RemoteOperations(true)
    .Paging(p => p.PageSize(10))
    .FilterRow(f => f.Visible(true))
    .HeaderFilter(f => f.Visible(true))
    .SearchPanel(f => f.Visible(true))
    .Columns(columns => {

        columns.AddFor(m => m.MetodopagoId)
             .Caption("ID Metodo de Pago");

        columns.AddFor(m => m.Metodo)
             .Caption("Metodo");

        columns.AddFor(m => m.Fechapago)
             .Caption("Fecha de Pago");
    })
    .Editing(e => e
    .Mode(GridEditMode.Popup)
    .AllowAdding(true)
    .AllowUpdating(true)
    .AllowDeleting(true)
    .Texts(t => t
    .ConfirmDeleteMessage("¿Estás seguro de que deseas eliminar este registro?")
    .SaveRowChanges("Guardar")
    .CancelRowChanges("Cancelar")
    )
    )
    )
