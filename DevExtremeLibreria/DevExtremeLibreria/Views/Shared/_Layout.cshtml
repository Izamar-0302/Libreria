<!DOCTYPE html>

<html>
<head>
    <!-- Metadatos básicos -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="description" content="Sistema de gestión para  Librería " />
    <meta name="author" content="" />

    <!-- Título correcto -->
    <title>DevExtreme Libreria</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    @Styles.Render("~/Content/bundle")
    @Styles.Render("~/Content/DevExtremeBundle")
    @Scripts.Render("~/Scripts/bundle")
    @Scripts.Render("~/Scripts/DevExtremeBundle")

</head>

<body style="padding-top: 3.5rem;">
    <nav class="navbar navbar-light fixed-top navbar-expand-md" style="background-color: #FFE0B2;">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <i class="fas fa-book-open me-2"></i>
                DevExtremeLibreria
            </a>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div id="navbar" class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a href="@Url.Action("Index", "Home")" class="nav-link active">
                            <i class="fas fa-home"></i> Inicio
                        </a>
                    </li>

                    <!-- Menú desplegable para Catálogos -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                            <i class="fas fa-book"></i> Catalogos
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="@Url.Action("Libro", "Home")">Libros</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Autor", "Home")">Autores</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Editorial", "Home")">Editoriales</a></li>
                        </ul>
                    </li>

                    <!-- Menú desplegable para Administración -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                            <i class="fas fa-users-cog"></i> Administracion
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="@Url.Action("Empleado", "Home")">Empleados</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Proveedor", "Home")">Proveedores</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Planilla", "Home")">Planillas</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Cargo", "Home")">Cargo</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Sucursal", "Home")">Sucursal</a></li>
                        </ul>
                    </li>

                    <!-- Resto de opciones -->
                    <li class="nav-item">
                        <a href="@Url.Action("Lector", "Home")" class="nav-link">
                            <i class="fas fa-user-tag"></i> Lectores
                        </a>
                    </li>
                </ul>

                <ul class="navbar-nav">
                    <!-- Nuevo contenedor para elementos alineados a la derecha -->
                    <li class="nav-item">
                        <a href="@Url.Content("~/Content/Manual/Curiosidad.pdf")"
                           class="nav-link"
                           target="_blank">
                            <i class="fas fa-info-circle"></i> Acerca de (Manual)
                        </a>
                    </li>
                </ul>
            </div>
                <!-- Barra de búsqueda (opcional) -->
                <form class="d-flex">
                    <input class="form-control me-2" type="search" placeholder="Buscar...">
                    <button class="btn btn-outline-dark" type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </form>
            </div>
    </nav>
    <!-- En el <body> -->
    <div id="app-container">
        <!-- Barra lateral -->
        <div id="dx-drawer" data-bind="dxDrawer: {
        opened: true,
        template: 'menuTemplate',
        position: 'left',
        revealMode: 'expand'
    }"></div>

        <!-- Contenido principal -->
        <div id="content" class="container" style="margin-left: 250px; padding: 20px;">
        </div>
    </div>

    <!-- Plantilla del menú -->
    <script type="text/html" id="menuTemplate">
        <div class="dx-drawer-menu">
            <div class="list-group">
                <a href="#" class="list-group-item list-group-item-action active">
                    <i class="fas fa-home"></i> Inicio
                </a>
                <a href="@Url.Action("Libro", "Home")" class="list-group-item list-group-item-action">
                    <i class="fas fa-book"></i> Libros
                </a>
                <a href="@Url.Action("Autor", "Home")" class="list-group-item list-group-item-action">
                    <i class="fas fa-user-edit"></i> Autores
                </a>
                <!-- Más opciones... -->
            </div>
        </div>
    </script>

    <!-- Script para inicializar el drawer -->
    <script>
        $(document).ready(function () {
            $('.dropdown-toggle').dropdown();
        });
    </script>

    <main class="container" style="margin-top: 1.5rem;">
        @RenderBody()
    </main>
</body>

</html>